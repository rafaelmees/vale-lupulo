                        </div>
                        <div class="col-sm-4 col-xx-12">
                            {{ form_row(form.bairro) }}
                        </div>
                        <div class="col-sm-4 col-xx-12">
                            {{ form_row(form.estado) }}
                        </div>
                        <div class="col-sm-4 col-xx-12">
                            {{ form_row(form.cidade) }}
                        </div>
                        <div class="col-xx-12">
                            {{ form_row(form.complemento) }}
                        </div>
                        <div class="col-sm-4 col-xx-12">
                            <button type="submit" class="btn accent btn-block waves-attach waves-light">
                                ENVIAR
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-sm-5">
                <img class="img-responsive" src="{{ asset("arquivos/logo2.png") }}" alt="Concurso Cerveja Caseira 2017">
