{% extends 'base.html.twig' %}

{% block body %}
    <h1>Aluno</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aluno.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ aluno.nome }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ aluno.email }}</td>
            </tr>
            <tr>
                <th>Datanascimento</th>
                <td>{% if aluno.dataNascimento %}{{ aluno.dataNascimento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datacadastro</th>
                <td>{% if aluno.dataCadastro %}{{ aluno.dataCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aluno_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('aluno_edit', { 'id': aluno.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
