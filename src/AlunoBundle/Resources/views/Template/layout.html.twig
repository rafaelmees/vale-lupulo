{% extends '::base.html.twig' %}

{% block favicon %}
    <link rel="icon" sizes="192x192" href="{{ asset('arquivos/configuracao/icone.png') }}" >
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('arquivos/configuracao/icone.ico') }}" >
    <meta name="theme-color" content="#3f51b5" />
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/site/site.css') }}" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" />

    {% if app.environment in ['dev', 'test'] %}
        <style>
            body::before {
                content: "xx";
                position: fixed;
                bottom: 36px;
                right: 0px;
                z-index: 9999999;
                background-color: #222222;
                color: #EEEEEE;
                padding: 8px 8px;
                width: 36px;
                text-align: center;
            }
            @media (min-width: 480px) {body::before {content: "xs";}}
            @media (min-width: 768px) {body::before {content: "sm";}}
            @media (min-width: 992px) {body::before {content: "md";}}
            @media (min-width: 1440px) {body::before {content: "lg";}}
        </style>
    {% endif %}
    <style>
        @import url(https://fonts.googleapis.com/css?family=Roboto:300,300italic,400,400italic,500,500italic);
        .content-heading {
            background-position: 50% 50%;
            background-repeat: no-repeat;
            background-size: cover;
            margin-bottom: -58px;
            padding-top: 68px;
            padding-bottom: 58px;
            z-index: 0;
        }
        .header .dropdown.open .dropdown-toggle {
            background-color: transparent;
        }
        .ui-card-pre {
            align-items: center;
            display: flex;
        }
        @media only screen and (min-width: 768px) {
            .ui-card-pre {
                min-height: 189px;
            }
            .ui-card-pre.ui-card-pre-media {
                min-height: 408px;
            }
        }
        .ui-tab-tab {
            margin-top: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="el-loading-indicator el-loading-indicator-fixed">
        <div class="progress-circular progress-circular-center">
            <div class="progress-circular-wrapper">
                <div class="progress-circular-inner">
                    <div class="progress-circular-left">
                        <div class="progress-circular-spinner"></div>
                    </div>
                    <div class="progress-circular-gap"></div>
                    <div class="progress-circular-right">
                        <div class="progress-circular-spinner"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section id="main">
        {{ parent() }}
    </section>
{% endblock %}

{% block header %}
    {% include "AlunoBundle:Common:header.html.twig" %}
{% endblock %}

{% block main %}
    
{% endblock %}

{% block footer %}
    {% include "AlunoBundle:Common:footer.html.twig" %}
{% endblock %}

{% block javascripts %}
<div id="fb-root"></div>
<script>
    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.5";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script src="{{ asset("assets/js/jquery.mask.js") }}"></script>
<script src="{{ asset("assets/js/base.js") }}"></script>
<script src="{{ asset("assets/js/project.js") }}"></script>
<script src="{{ asset("assets/js/parallax.js") }}"></script>

<script type="text/javascript">
    $('.parallax').parallax();
</script>
{% endblock %}
